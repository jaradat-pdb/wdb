<%- include("partials/header") %>
		<div class="container-fluid">
			<header class="jumbotron bg-warning text-center">
				<div class="container">
					<h1 id="cgrounds"><%= campground.name %></h1>
					<p><%= campground.desc %></p>
				</div>
			</header>
			<div class="d-flex flex-row justify-content-center">
				<img src="<%= campground.image %>" alt="Image Unavailable" class="img-fluid">
			</div>
			<div class="mt-3">
				<h4><em>Comments:</em></h4>
<% campground.comments.forEach((comment) => {%>
				<div>
					<%= comment.text %> - <strong><%= comment.author %></strong>
				</div>
<% }); %>
			</div>
		</div>
<%- include("partials/footer") %>
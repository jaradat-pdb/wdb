<%- include("../partials/header") %>
		<div class="container-fluid">
			<div class="jumbotron bg-success">
				<div class="container">
					<h1>Add a <strong>NEW</strong> Comment to <em><%= campground.name %></em></h1>
				</div>
			</div>
			<div class="row cgrounds-new-form">
				<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="comment[text]" placeholder="Text">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="comment[author]" placeholder="Author">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-warning">Submit</button>
					</div>
				</form>
			</div>
		</div>
<%- include("../partials/footer") %>